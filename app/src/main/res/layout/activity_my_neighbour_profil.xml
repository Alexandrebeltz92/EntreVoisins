<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical"
    tools:context=".ui.neighbour_list.MyNeighbourProfil">

    <ImageView
        android:id="@+id/profil_picture"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#fff"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:id="@+id/profil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/profil_picture"
        app:layout_constraintLeft_toLeftOf="@id/profil_picture"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Hello my name is alex" />

    <ImageView
        android:id="@+id/background_contact"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/profil_picture"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/profil_name_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/background_contact"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textEditNoPasteWindowLayout="@id/background_contact"
        android:text="NAME" />

    <TextView
        android:id="@+id/localisation_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="PLACE TO BE "
        android:textEditNoPasteWindowLayout="@id/background_contact"
        app:layout_constraintTop_toBottomOf="@id/profil_name_2" />

    <TextView
        android:id="@+id/number_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="NUMBER "
        android:textEditNoPasteWindowLayout="@id/background_contact"
        app:layout_constraintTop_toBottomOf="@id/localisation_contact" />

    <TextView
        android:id="@+id/social_media"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="social media "
        android:textEditNoPasteWindowLayout="@id/background_contact"
        app:layout_constraintTop_toBottomOf="@id/number_contact" />

    <ImageView
        android:id="@+id/background_about"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fff"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/background_contact"/>

    <TextView
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="About me "
        android:textEditNoPasteWindowLayout="@id/background_contact"
        app:layout_constraintTop_toTopOf="@id/background_about" />

    <TextView
        android:id="@+id/about_corps"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="MORE TEXT"
        android:textEditNoPasteWindowLayout="@id/background_contact"
        app:layout_constraintTop_toBottomOf="@id/about_title" />